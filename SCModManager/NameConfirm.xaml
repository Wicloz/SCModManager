<Window x:Class="SCModManager.NameConfirm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SCModManager"
        mc:Ignorable="d"
        Title="Confirm Name" Width="300">
    <StackPanel Orientation="Vertical">
        <TextBlock>Enter a name for the selection:</TextBlock>
        <TextBox/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">

            <Button Width="50">OK</Button>
            <Button Width="50">Cancel</Button>
        </StackPanel>
    </StackPanel>
</Window>
