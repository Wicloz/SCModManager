<Window x:Class="SCModManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SCModManager"
        xmlns:ui="clr-namespace:SCModManager.Ui"
        xmlns:diff="clr-namespace:SCModManager.DiffMerge"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1024">
    <Grid>
        <Grid.Resources>
            <ui:ModConflictToBoolConverter x:Key="ConflictToBool"/>
            <DataTemplate DataType="{x:Type local:Mod}" x:Key="ModListTemplate">
                <Grid x:Name="Container" HorizontalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0" Grid.ColumnSpan="3" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Rectangle Grid.Column="0" Fill="{x:Null}" x:Name="Underlay1"/>
                        <Rectangle Grid.Column="1" Fill="{x:Null}" x:Name="Underlay2"/>
                    </Grid>
                    <CheckBox Grid.Column="0" IsChecked="{Binding Selected}"/>
                    <TextBlock Grid.Column="1" Text="{Binding Name}"/>
                    <TextBlock Grid.Column="2" Text="{Binding ConflictCount}"/>
                    <Rectangle Fill="{x:Null}" Grid.Column="0" Grid.ColumnSpan="3" x:Name="Overlay"/>
                </Grid>
                <DataTemplate.Triggers>
                    <DataTrigger Value="True">
                        <DataTrigger.Binding>
                            <MultiBinding Converter="{StaticResource ConflictToBool}">
                                <Binding/>
                                <Binding Path="DataContext.SelectedModFile" RelativeSource="{RelativeSource FindAncestor, AncestorType=local:MainWindow}"/>
                                <Binding Path="DataContext.SelectedMod" RelativeSource="{RelativeSource FindAncestor, AncestorType=local:MainWindow}"/>
                            </MultiBinding>
                        </DataTrigger.Binding>
                        <Setter TargetName="Underlay1" Property="Fill" Value="PaleVioletRed"/>
                    </DataTrigger>
                    <DataTrigger Value="True">
                        <DataTrigger.Binding>
                            <MultiBinding Converter="{StaticResource ConflictToBool}" ConverterParameter="True">
                                <Binding/>
                                <Binding Path="DataContext.SelectedModFile" RelativeSource="{RelativeSource FindAncestor, AncestorType=local:MainWindow}"/>
                                <Binding Path="DataContext.SelectedMod" RelativeSource="{RelativeSource FindAncestor, AncestorType=local:MainWindow}"/>
                            </MultiBinding>
                        </DataTrigger.Binding>
                        <Setter TargetName="Underlay2" Property="Fill" Value="PaleVioletRed"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding ParseError}" Value="True">
                        <Setter TargetName="Overlay" Property="Fill" Value="LightGray"/>
                        <Setter TargetName="Overlay" Property="Opacity" Value="0.3"/>
                        <Setter TargetName="Overlay" Property="ToolTip" Value="There was an error parsing this mod file."/>
                    </DataTrigger>
                </DataTemplate.Triggers>
            </DataTemplate>
            <DataTemplate DataType="{x:Type local:ModFile}" x:Key="ModFileListTemplate">
                <Grid x:Name="Container" HorizontalAlignment="Stretch">
                    <TextBlock Text="{Binding Path}"/>
                </Grid>
                <DataTemplate.Triggers>
                    <DataTrigger Binding="{Binding HasConflicts}" Value="True">
                        <Setter TargetName="Container" Property="Background" Value="PaleVioletRed"/>
                        <Setter TargetName="Container" Property="ToolTip">
                            <Setter.Value>
                                <ListBox ItemsSource="{Binding Conflicts}" DisplayMemberPath="Name"/>
                            </Setter.Value>
                        </Setter>
                    </DataTrigger>
                </DataTemplate.Triggers>
            </DataTemplate>
            <ui:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="200"/>
            <ColumnDefinition Width="*" MinWidth="350"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu Grid.ColumnSpan="3">
            <Button Command="{Binding SaveSettingsCommand}">Save To Stellaris</Button>
            <Button Command="{Binding MergeModsCommand}">Merge Selected</Button>
            <Separator/>
            
        </Menu>
        <DockPanel LastChildFill="True" Grid.Column="0" Grid.Row="1" Grid.RowSpan="2" VerticalAlignment="Stretch">
            <DockPanel LastChildFill="True" DockPanel.Dock="Top">
                <Label DockPanel.Dock="Left">Mod list:</Label>
                <Button DockPanel.Dock="Right" Command="{Binding Duplicate}" ToolTip="Duplicate current selection">+</Button>
                <Button DockPanel.Dock="Right" Command="{Binding Delete}" ToolTip="Delete current selection">X</Button>
                <ComboBox ItemsSource="{Binding Selections}" DisplayMemberPath="Key" SelectedItem="{Binding CurrentSelection}"/>
            </DockPanel>    
            <ListBox ItemsSource="{Binding Mods}"
                     SelectedItem="{Binding SelectedMod}"
                     ItemTemplate="{StaticResource ModListTemplate}"
                     HorizontalContentAlignment="Stretch"/>
        </DockPanel>
        <Grid Grid.Column="1" Grid.Row="0" Grid.RowSpan="3" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <ListBox Grid.Column="0" Visibility="{Binding SelectedMod, Converter={StaticResource NullToVisibilityConverter}}"
                    ItemsSource="{Binding SelectedMod.Files}"
                    SelectedItem="{Binding SelectedModFile}"
                    ItemTemplate="{StaticResource ModFileListTemplate}"
                    VerticalAlignment="Stretch"/>
            <ListBox Grid.Column="1"  Visibility="{Binding SelectedModFile, Converter={StaticResource NullToVisibilityConverter}}"
                    ItemsSource="{Binding SelectedModFile.Conflicts}"
                    SelectedItem="{Binding SelectedConflict}"
                    DisplayMemberPath="Name"
                    VerticalAlignment="Stretch"/>


            <diff:MergeViewer DataContext="{Binding ComparisonContext}" Visibility="{Binding ., RelativeSource={RelativeSource Self}, Converter={StaticResource NullToVisibilityConverter}}" IsReadOnly="True" Grid.Column="0" Grid.Row="1" Contents="{Binding Comparison}" Side="Left" Document="{Binding LeftDocument}" FontFamily="Consolas" ShowLineNumbers="True" ScrollOffset="{Binding ScrollOffset}" />
            <diff:MergeViewer DataContext="{Binding ComparisonContext}" Visibility="{Binding ., RelativeSource={RelativeSource Self}, Converter={StaticResource NullToVisibilityConverter}}" IsReadOnly="True" Grid.Column="1" Grid.Row="1" Contents="{Binding Comparison}" Side="Right" Document="{Binding RightDocument}" FontFamily="Consolas" ShowLineNumbers="True" ScrollOffset="{Binding ScrollOffset}" />
        </Grid>
    </Grid>
</Window>
